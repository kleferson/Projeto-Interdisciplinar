<head>
    <title>Painel de Administrador</title>
</head>
{{>_navbar}}
<div class="container mt-4">
    {{>_msg}}
    <center><h1>Prontuários</h1></center>
<hr>
<a href="/cadastrar-prontuario" class="btn btn-primary">Cadastrar Prontuário</a>
<a href="/admin/showuser" class="btn btn-primary">Usuários</a>



{{#each prontuarios}}

    <div class="card mt-4">
        <div class="card-body">
            <a href="/showprontuarios/view/{{_id}}">
                <h4>{{nome}}</h4>
            </a>
            <small>{{date}}</small><br>
            <a href="/showprontuarios/edit/{{_id}}"><button class="btn btn-success mt-4">Editar Prontuário</button></a> 
            <form action="/showprontuarios/delete/" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar</button>
            </form>
        </div>
    </div>

    {{else}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>Nenhum prontuário cadastrado!</h4>
        </div>
    </div>
</div>
{{/each}}