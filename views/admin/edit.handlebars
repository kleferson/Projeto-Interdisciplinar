                <option>...</option>
                <option>Visão</option>
              </select>
            </div>

            <div class="col">
              <select class="form-control" name="audicao" id="audicao1">
                <option>...</option>
                <option>Audição</option>
              </select>
            </div>



          </div>

          <!--Sinais Vitais-->
          <br>
          <div class="form-row">
            <label>Sinais Vitais:</label>
            &nbsp;
            <label>PA</label>
            <div class="form-group col">
              <input type="number" class="form-control" id="pa1" name="pa">
            </div>
            &nbsp;&nbsp;&nbsp;&nbsp;
            <label>FC</label>
            <div class="form-group col">
              <input type="number" class="form-control" id="fc1" name="fc">
            </div>
            &nbsp;&nbsp;&nbsp;&nbsp;
            <label>FR</label>
            <div class="form-group col">
              <input type="number" class="form-control" id="fr1" name="fr">
            </div>
            &nbsp;&nbsp;&nbsp;&nbsp;
            <label>T</label>
            <div class="form-group col">
              <input type="number" class="form-control" id="t1" name="t">
            </div>
          </div>

          <!--Motivo do atendimento-->
          <div class="form-group">
            <label>Motivo do Atendimento</label>
            <input type="text" class="form-control" id="motivoatendimento1" name="motivoatendimento">
