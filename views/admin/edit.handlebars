        <form action="/showprontuarios/edit" method="POST">
          <input type="hidden" name="id" value="{{prontuario._id}}">
          <br>
          <!-- Nome do prontuario e nome completo,data de abertura-->
          <div class="form-row">
            <div class="form-group col">
              <label>Nome do prontuário</label>
              <input type="text" class="form-control" id="nomepront" name="nompront">
            </div>

            <div class="col">
              <label>Data de Abertura.</label>
              <input type="date" class="form-control" id="dataAbertura" name="databert">
            </div>

            <div class="col">
              <label>Nome completo</label>
              <input type="text" class="form-control" id="nomecompleto" name="nome" value="{{prontuario.nome}}">
            </div>

          </div>

          <!-- data nascimento,endereço,sexo -->
          <div class="form-row">
            <div class="form-group col">
              <label>Data de nascimento</label>
              <input type="date" class="form-control" id="datanasc" name="datnasci">
            </div>

            <div class="col">
              <label>Endereço</label>
              <input type="text" class="form-control" id="endereco" name="enderec">
            </div>

            <div class="col" id="sexo">
              <label>Sexo:</label>
              <select class="form-control" name="sexo">
                <option>Masculino</option>
                <option>Feminino</option>
              </select>
            </div>

          </div>

          <!-- Email,telefone,nome responsavel,escolaridade -->
          <div class="form-row">
            <div class="form-group col">
              <label for="inputEmail4">Email</label>
              <input type="email" class="form-control" id="email1" placeholder="" name="email">
            </div>
            <div class="col">
              <label for="inputPassword4">Telefone</label>
              <input type="tel" class="form-control" id="telefone1" placeholder="(65) 9999 9999" name="telefone">
            </div>

            <div class="col">
              <label>Escolaridade</label>
              <select class="form-control" name="escolaridade" id="escol">
                <option>Médio</option>
                <option>Superior</option>
                <option>Pos-Graduado</option>
                <option>Mestrado</option>
                <option>Doutorado</option>
              </select>
            </div>

          </div>

          <!-- contato,nome responsavel/cuidador -->
          <div class="form-group" id="cuidador">
            <label>Nome, Telefone ou outro tipo tipo de contato do responsável/cuidador (se aplicável)</label>
            <input type="text" class="form-control" id="cuidador1" name="cuidador">
          </div>


          <!--Alergia, ocupação-->
          <div class="form-row">
            <div class="form-group col">
              <label>Alergia</label>
              <input type="text" class="form-control" id="alergia1" name="alergia">
            </div>

            <div class="col">
              <label>Ocupação</label>
              <select class="form-control" name="ocupacao" id="ocupacao1">
                <option>Estudante</option>
                <option>Profissional</option>
              </select>
            </div>

          </div>

          <!--limitações-->
          </br>
          <div class="form-row">

            <label>Limitação</label>
            <div class="form-group col">

              <input type="text" class="form-control" placeholder="Outras" id="outras1" name="outras">
            </div>

            <div class="col">
              <select class="form-control" name="cognitiva" id="cognitiva1">
                <option>...</option>
                <option>Cognitiva</option>
              </select>
            </div>

            <div class="col">
              <select class="form-control" name="locomocao" id="locomocao1">
                <option>...</option>
                <option>Locomoção</option>
              </select>
            </div>

            <div class="col">
