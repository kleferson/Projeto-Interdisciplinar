<head>
    <title>Login</title>
    <link rel="stylesheet" href="/css/login.css">
</head>

<body>
    {{>_navbar}}
    <div class="container mt-4">
        {{>_msg}}
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <h5 class="card-title text-center">Login</h5>
                        <form action="/login" method="POST" class="form-signin">
                            <div class="form-label-group">
                                <input type="email" id="inputEmail" class="form-control" name="email"
                                    placeholder="Email address" required>
                                <label for="inputEmail">Email</label>
                            </div>
                            <div class="form-label-group">
                                <input type="password" id="inputPassword" class="form-control" name="senha"
                                    placeholder="Password" required>
                                <label for="inputPassword">Senha</label>
                            </div>
                            <button class="btn btn-success btn-block text-uppercase" type="submit">Entrar</button>
                            <p class="small text-center text-gray-soft">
                                Ainda não é cadastrado?
                                <a href="login/cadastrar-usuario">Cadastre-se</a>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>